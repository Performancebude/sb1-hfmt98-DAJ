---
import { Image } from '@astrojs/image/components';
---

<header class="fixed w-full bg-white/95 backdrop-blur-sm shadow-sm z-50">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex justify-between items-center">
      <a href="/" class="flex items-center space-x-2">
        <span class="text-2xl font-bold text-gray-800">Dr. Jensen</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        <a href="#expertise" class="text-gray-600 hover:text-primary transition-colors">Expertise</a>
        <a href="#leistungen" class="text-gray-600 hover:text-primary transition-colors">Leistungen</a>
        <a href="#referenzen" class="text-gray-600 hover:text-primary transition-colors">Referenzen</a>
        <a href="#kontakt" class="bg-primary text-white px-4 py-2 rounded-md hover:bg-primary/90 transition-colors">
          Kontakt
        </a>
      </div>

      <button id="menuButton" class="md:hidden text-gray-600 hover:text-primary transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden">
      <div class="py-4 space-y-4">
        <a href="#expertise" class="block text-gray-600 hover:text-primary transition-colors">Expertise</a>
        <a href="#leistungen" class="block text-gray-600 hover:text-primary transition-colors">Leistungen</a>
        <a href="#referenzen" class="block text-gray-600 hover:text-primary transition-colors">Referenzen</a>
        <a href="#kontakt" class="block bg-primary text-white px-4 py-2 rounded-md hover:bg-primary/90 transition-colors text-center">
          Kontakt
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>